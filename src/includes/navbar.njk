<!-- Navbar Start -->
<div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
    <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
        <div class="col-lg-6 px-5 text-start">
            <small><i class="fa fa-map-marker-alt text-primary me-2"></i>{{site.company.address}}</small>
            <small class="ms-4"><i class="fa fa-clock text-primary me-2"></i>{{site.company.time}}</small>
        </div>
        <div class="col-lg-6 px-5 text-end">
            <small><i class="fa fa-envelope text-primary me-2"></i>{{site.company.email}}</small>
            <small class="ms-4"><i class="fa fa-phone-alt text-primary me-2"></i>{{site.company.phone}}</small>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
        <a href="/" class="navbar-brand ms-4 ms-lg-0">
            <h1 class="display-5 text-primary m-0">{{site.company.name}}</h1>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                {%- for val in site.menu -%}
                {%- if val.children -%}
                <div class="nav-item dropdown">
                    <a href="{{ val.path }}" 
                    class="nav-link dropdown-toggle {{ "active" if site.submenu.includes(title) }}" data-bs-toggle="dropdown">
                        {{ val.title }}
                    </a>
                    <div class="dropdown-menu border-light m-0">
                        {%- for sub in val.children -%}
                        <a href="{{sub.path}}" class="dropdown-item 
                            {{ " active" if title===sub.title }}">{{sub.title}}
                        </a>
                        {%- endfor -%}
                    </div>
                </div>
                {%- else -%}
                <a href="{{ val.path }}" 
                    class="nav-item nav-link {{ " active" if title===val.title }}">
                    {{val.title}}
                </a>
                {%- endif -%}
                {%- endfor -%}
            </div>
            <div class="d-none d-lg-flex ms-2">
                <a class="btn btn-light btn-sm-square rounded-circle ms-3" href="">
                    <small class="fab fa-facebook-f text-primary"></small>
                </a>
                <a class="btn btn-light btn-sm-square rounded-circle ms-3" href="">
                    <small class="fab fa-twitter text-primary"></small>
                </a>
                <a class="btn btn-light btn-sm-square rounded-circle ms-3" href="">
                    <small class="fab fa-linkedin-in text-primary"></small>
                </a>
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End -->